<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <RelativeLayout
        android:id="@+id/PIdateL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DRshow"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/PIdateCut"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/PIdateTittle"
            android:rotation="90"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/PIdateTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/PIdateAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/PIdateTittle"
            android:rotation="270"
            android:src="@drawable/arrow" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="2dp"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="25sp"
        android:id="@+id/showRemain"
        android:textColor="#FF0000"
        android:visibility="gone"
        />
    <ScrollView
        android:layout_below="@+id/PIdateL"
        android:layout_above="@+id/adView"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/showNul"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/spuerL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#000000"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#77DDFF"
                    android:gravity="center"
                    android:text="特別獎"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/superN"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="#f5f5f5"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textSize="25sp"
                        android:padding="2dp"
                        android:text="XXXXXXX"
                        android:layout_alignParentLeft="true"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/superNC"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="#dddddd"
                        android:layout_toRightOf="@+id/superN"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:singleLine="false"
                        android:text="號碼相同者\n獎金 1,000 萬元"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spcL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/spuerL"
                android:background="#000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#77DDFF"
                    android:gravity="center"
                    android:text="特獎"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/spcN"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:padding="2dp"
                        android:background="#f5f5f5"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:textSize="25sp"
                        android:text="XXXXXXX"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="0.5dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_alignParentRight="true"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="號碼相同者\n獎金 200 萬元"
                        android:layout_toRightOf="@+id/spcN"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firdtL"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/spcL"
                android:background="#000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#77DDFF"
                    android:gravity="center"
                    android:text="頭獎"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/firstN"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:padding="2dp"
                        android:background="#f5f5f5"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:text="XXXXXXX"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/firstN"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="號碼相同者\n獎金 20 萬元"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addsixL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firdtL"
                android:background="#000000"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#77DDFF"
                    android:gravity="center"
                    android:text="增開六獎"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/addsixN"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_alignParentLeft="true"
                        android:padding="2dp"
                        android:textSize="25dp"
                        android:background="#f5f5f5"
                        android:gravity="center"
                        android:text="XXXXXXX"
                        android:textColor="#000000" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/addsixN"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="號碼相同者\n獎金200元"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addsixL"
                android:background="#000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#77DDFF"
                    android:gravity="center"
                    android:text="二獎"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#dddddd"
                    android:gravity="center"
                    android:text="與頭獎末七碼相同者獎金4萬元"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondL"
                android:background="#000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#77DDFF"
                    android:gravity="center"
                    android:text="三獎"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#dddddd"
                    android:gravity="center"
                    android:text="與頭獎末六碼相同者獎金1萬元"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fourthL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thirdL"
                android:background="#000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#77DDFF"
                    android:gravity="center"
                    android:text="四獎"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#dddddd"
                    android:gravity="center"
                    android:text="與頭獎末五碼相同者獎金4仟元"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fiveL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fourthL"
                android:background="#000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#77DDFF"
                    android:gravity="center"
                    android:text="五獎"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#dddddd"
                    android:gravity="center"
                    android:text="與頭獎末四碼相同者獎金1仟元"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sixthL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fiveL"
                android:background="#000000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#77DDFF"
                    android:gravity="center"
                    android:text="六獎"
                    android:textColor="#000000"
                    android:textSize="25sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#dddddd"
                    android:gravity="center"
                    android:text="與頭獎末三碼相同者獎金200元"
                    android:textColor="#000000" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>